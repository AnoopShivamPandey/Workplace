<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dp" />
            <stroke android:width="1dip" android:color="#3E5B9A" />
            <gradient android:angle="-90" android:startColor="#2a4f9f" android:endColor="#4e73c1"  />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="100dp" />
            <stroke android:width="1dip" android:color="#3E5B9A" />
            <gradient android:angle="-90" android:startColor="#4e73c1" android:endColor="#2a4f9f"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dp" />
            <stroke android:width="1dip" android:color="#3E5B9A" />
            <gradient android:angle="-90" android:startColor="#4e73c1" android:endColor="#2a4f9f"  />
        </shape>
    </item>
</selector>